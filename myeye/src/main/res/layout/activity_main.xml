<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    tools:context=".MainActivity">

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/vTabLayout"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        app:tl_iconVisible="false"
        app:tl_indicator_bounce_enable="false"
        app:tl_indicator_color="@color/colorTextPrimary"
        app:tl_indicator_height="3dp"
        app:tl_indicator_margin_bottom="3dp"
        app:tl_indicator_width="10dp"
        app:tl_tab_width="66dp"
        app:tl_textBold="BOTH"
        app:tl_textSelectColor="@color/colorTextPrimary"
        app:tl_textUnselectColor="@color/colorTextSecondary"
        app:tl_textsize="12sp"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vViewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>